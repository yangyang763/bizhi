<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_click_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#96303230"
        android:layout_alignTop="@+id/activity_click_viewpager"
        >

        <ImageView
            android:id="@+id/activity_click_imageview1"
            android:layout_height="60dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="onclick"
            android:background="@drawable/umeng_socialize_action_back_selected"

            />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/activity_click_textview2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="壁纸详情"
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:gravity="center_horizontal"

            />
        <ImageView
            android:id="@+id/activity_click_imageview3"
            android:layout_height="60dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="onclick"
            android:background="@drawable/umeng_socialize_tx_off"
            />

        </LinearLayout>

    <android.support.v4.view.ViewPager

        android:id="@+id/activity_click_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/activity_click_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#96303230"
        android:layout_alignBottom="@+id/activity_click_viewpager"
        >

        <Button
            android:id="@+id/activity_click_button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="  收藏  "
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:background="#12303230"
            android:onClick="onclick"
            />
        <Button
            android:id="@+id/activity_click_button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="设为壁纸"
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:background="#12303230"
            android:onClick="onclick"
            />
        <Button
            android:id="@+id/activity_click_button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="  下载  "
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:background="#12303230"
            android:onClick="onclick"
            />



    </LinearLayout>

</RelativeLayout>