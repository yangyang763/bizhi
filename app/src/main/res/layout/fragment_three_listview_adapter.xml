<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_below="@id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/fragment3_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="文字"
            android:textColor="@color/color_black"
            />

        <ImageView
            android:id="@+id/fragment3_imagview2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:layout_alignRight="@+id/fragment3_textview2"
            />
    </RelativeLayout>
   <LinearLayout
       android:id="@+id/fragment3_linearlayout_3i"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <ImageView
           android:id="@+id/fragment3_image1"
           android:layout_width="0dp"
           android:layout_height="250dp"
           android:layout_weight="1"
           android:scaleType="fitXY"
           android:background="@mipmap/ic_launcher"
           />
       <ImageView
           android:id="@+id/fragment3_image2"
           android:layout_width="0dp"
           android:layout_height="250dp"
           android:layout_weight="1"
           android:scaleType="fitXY"
           android:background="@mipmap/ic_launcher"
           />
       <ImageView
           android:id="@+id/fragment3_image3"
           android:layout_width="0dp"
           android:layout_height="250dp"
           android:layout_weight="1"
           android:scaleType="fitXY"
           android:background="@mipmap/ic_launcher"
           />
       </LinearLayout>

</LinearLayout>
