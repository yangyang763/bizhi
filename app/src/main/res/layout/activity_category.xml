<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bane.mymain.CategoryActivity">

    <TextView
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/activity_cate_textview0"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="壁纸精选"
        android:gravity="center"
        android:textColor="@color/color_black"
        />
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#363535"
        android:layout_below="@+id/activity_cate_textview0"
        />

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/view"
        android:id="@+id/activity_cate_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/activity_cate_tablayout"
        android:id="@+id/activity_cate_tab_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>
