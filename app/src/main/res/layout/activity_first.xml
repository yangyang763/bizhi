<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bane.mymain.FirstActivity">

    <RelativeLayout
        android:id="@+id/relative_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="600"
        >
    </RelativeLayout>


    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:background="#DDDDDD"
        />
    <RadioGroup

        android:id="@+id/radiogroup"
        android:orientation="horizontal"

        android:layout_marginBottom="0dp"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_below="@+id/relative_fragment">

        <RadioButton
            android:id="@+id/radiobutton_recommand"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_recommand"
            android:text="@string/recommand"
            android:checked="true"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:onClick="onclick"
            android:tag="0"
            />
        <RadioButton
            android:id="@+id/radiobutton_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_category"
            android:text="@string/category"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:onClick="onclick"
            android:tag="1"
            />
        <RadioButton
            android:id="@+id/radiobutton_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_search"
            android:text="@string/search"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:onClick="onclick"
            android:tag="2"
            />
        <RadioButton
            android:id="@+id/radiobutton_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_more"
            android:text="@string/more"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:onClick="onclick"
            android:tag="3"
            />


        </RadioGroup>

</LinearLayout>
